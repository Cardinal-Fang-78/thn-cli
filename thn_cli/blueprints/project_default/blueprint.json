{
    "name": "project_default",
    "version": 1,
    "description": "Default scaffold for creating a new THN Project.",
    "variables": {
        "project_name": "str",
        "owner": "str",
        "created": "str"
    },
    "rules": {
        "allow_children": [
            "modules/*"
        ],
        "ignore": [
            "logs/**",
            "temp/**",
            ".thn-snapshots/**",
            ".thn/registry/**"
        ]
    },
    "templates": [
        {
            "source": "templates/project_info.txt.j2",
            "destination": "README.txt"
        },
        {
            "source": "templates/structure.json.j2",
            "destination": "structure.json"
        }
    ]
}
